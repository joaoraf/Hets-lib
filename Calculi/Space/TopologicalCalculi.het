view RCC5_to_RCC8 :
     RCC5 
to   { RCC8 
	then %def
     	ops dr,pp,ppi:Rel
     	. dr = dc cup ec
     	. pp = tpp cup ntpp
     	. ppi = tppi cup ntppi
      }
=    sort BaseRel |-> Rel
end

%( Nicht korrekt:
view RCC8_to_AllenIA :
     RCC8 
to   { AllenIA then %def
       ops dc,ec,po,tpp,ntpp,tppi,ntppi,eq: Rel
       . dc = b cup bi
       . ec = m cup mi
       . po = o cup oi
       . tpp = s cup f
       . tppi = si cup fi
       . ntpp = d
       . ntppi = di
       . eq = e 
	}
=    sort BaseRel |-> Rel 
end
)%



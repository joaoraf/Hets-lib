library HasCASL/Metatheory/Ord

%display __<=__ %LATEX __\leq__

logic HasCASL

spec Ord =
class  Ord {
var    a: Ord
fun    __<=__ : Pred (a * a)
var    x, y, z: a
. x <= x
. x <= y /\ y <= z => x <= z
. x <= y /\ y <= x => x = y
}

var a, b: Ord
type  instances a * b: Ord
vars  x, z: a; y, w: b
. (x, y) <=[a * b] (z, w) <=> x <=[a] z /\ y <=[b] w

type  instance Unit: Ord
. () <=[Unit] ()

type  instance ?a: Ord
vars  x, y: ?a
. x <=[?a] y <=> def x() => x() <= y()

library HasCASL/MetricSpaces

logic HasCASL

spec Real = %% just a fake
   sort Real
   pred __<=__ : Real*Real;
        __<__ : Real*Real;
        __>__ : Real*Real
   ops 0:Real;
       __+__ : Real*Real -> Real
end

spec MetricSpace =
  Real
then
  sort S
  op d:S*S->Real
  var x,y,z:S
  . d(x,y) = 0 <=> x=y
  . d(x,y) = d(y,x)
  . d(x,z) <= d(x,y) + d(y,z)
end

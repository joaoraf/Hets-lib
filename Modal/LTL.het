library Modal/LTL

logic Modal

spec LTL =
	modalities [],X,U {
				[](A => B)=>([]A=>[]B) %(K)%;
				X(A => B)=>(X A => X B) %(Ko)%;
				X not A <=> not X A %(Fun)%;
				[]A => A /\ X [] A %(Mix)%;
				[](A=>X A)=>(A=> [] A)) %(Ind)%;
				A U B => <> A %(U1)%;
				A U B => B \/ (A /\ X (A U B)) %(U2)%
				}
end
